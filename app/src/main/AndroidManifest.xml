<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myworld">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_world"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_world_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyWorld">
        <activity android:name=".CountryDetails"
            android:parentActivityName=".MainActivity"
            android:label="World"></activity>
        <activity
            android:name=".About"
            android:label="About Me"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity"
            android:label="World"/>
        <activity
            android:name=".SplashScreen"
            android:theme="@style/NoAction">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>